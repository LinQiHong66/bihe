html{font-size: 16px;}
body{font-size: 16px;background: #ecf0f1}
$bg1:#f5f5f5;
$tcolor1:#117dc8;
$tcolor2:#76bdef;
@import "_config";
@import "_mixins";
//begin
.bank{
    width: 1200px;
    margin: 0 auto;

    .container{
        min-height:800px;
        padding: 20px;
        width: 1160px;
        background-color: #fff;
        // padding-left: 50px;
        .pdtit{
            padding-bottom: 20px;
            border-bottom: 1px solid #e5e5e5;
        }
        table{
            width: 100%;
            margin-top: 30px;
            margin-bottom: 30px;
            // margin-left: 50px;
            // border: none;
            border: 1px solid #e5e5e5;
            border-collapse:collapse;
            thead{
                background-color: #e5e5e5;
                th{
                    padding:5px 10px;
                    // border: 1px solid #e5e5e5;
                }
            }
            td{
                // border: 1px solid #e5e5e5;
                text-align: center;
                padding: 5px;
            }
        }
        .addbtn{
            // margin-left: 50px;
            width: 250px;
            background-color: $tcolor1;
            border: none;
            color:#fff;
            font-family: 'microsoft yahei';
            height: 40px;
            transition:background-color .3s;
            cursor: pointer;
        }
        .addbtn:hover{
            background-color: $tcolor2;
        }
    }
}


