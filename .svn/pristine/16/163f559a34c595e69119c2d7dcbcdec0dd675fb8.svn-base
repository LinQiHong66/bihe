@import "_config";
@import "_mixins";
$bg1:#f5f5f5;
$tcolor1:#117dc8;
$tcolor2:#76bdef;
.nav2Bg{
  width:1200px;
  margin: 30px auto;
  .boxleft{
    width: 210px;
    padding-bottom:30px;
    border: 1px solid #ebebeb;
    border-radius: 4px;
    float: left;
    background: #FFFFFF;
    position: absolute;
    box-shadow: 0px 0px 3px #ccc;
     h2 {
        height: 80px;
        line-height: 80px;
        color: $tcolor1;
        padding-left: 24px;
        font-size: 18px;
        font-weight: 600;
             border-bottom: 1px solid rgba(17, 125, 200, 0.67);
        i{
          font-weight: lighter;
          padding-left: 7px;
          font-size: 12px;
      }
    }
    ul{
      li{
        width: 100%;
        line-height: 40px;
        font-size: 16px;
        text-align: center;
        transition:all .3s;
        cursor: pointer;
        a{
          display: block;
          width: 100%;
          height: 100%;
          padding: 5px 0;
          text-align: left;
          .navIcon{
            font-size: 24px;
            color:$tcolor2;
            margin-left: 25px;
          }
          i{
                display: inline-block;
                height: 12px;
                width: 13px;
                float: right;
                margin-top: 16px;
                margin-right: 10px;
                background: url(https://ofybqrgr4.qnssl.com/images/arrow_right.png) no-repeat center;
            }
        }
      }
      li:hover{
       // background-color: $tcolor2;
        color:#fff;
        .navIcon{
          color:$tcolor1;
        }
        a{
          color:$tcolor1;
        }
      }
    }
  }
}
.active{
  background-color: $tcolor2 !important;
  color:#fff !important;
  .navIcon{
    color:#fff !important;
  }
  a{
    color:#fff !important;
  }
}
// xs:480px;sm:768px;md:992px;lg:1200px
//Responsive
@include respond-to(lg) {
   .nav2Bg{
  width:992px;
  margin: 20px auto;
  .boxleft{
    width: 170px;
    padding-bottom:20px;
    box-shadow: 0px 0px 2px #ccc;
     h2 {
        height: 60px;
        line-height: 60px;
        color: $tcolor1;
        padding-left: 8px;
        font-size: 16px;
        font-weight: 600;

        i{
          font-weight: lighter;
          padding-left:3px;
          font-size: 10px;
      }
    }
    ul{
      li{
        line-height:30px;
        font-size: 15px;
        a{
          .navIcon{
            font-size: 20px;
          }
          i{
                height: 11px;
                width: 12px;
                float: right;
                margin-top: 14px;
                margin-right: 8px;
            }
        }
      }
    }
  }
}
}
// xs:480px;sm:768px;md:992px;lg:1200px
//Responsive
@include respond-to(md) {
  .nav2Bg{
    width:100%;
    margin: 20px auto;
    .boxleft{
       margin-bottom: 20px;
      width: 100%;
      padding-bottom:0;
      border: 1px solid #ebebeb;
      border-radius: 4px;
      float: left;
      background: #FFFFFF;
      position: relative;
      box-shadow: 0px 0px 2px #ccc;
       h2 {
          display:none;
      }
      ul{
        li{
          width: 25%;
          float:left;
          line-height: 40px;
          font-size: 14px;
          a{
            display: block;
            width: 100%;
            height: 100%;
            padding: 5px 0;
            .navIcon{
              font-size: 20px;
              color:$tcolor2;
            }
            i{
                  display:none;
              }
          }
        }
        li:hover{
          background-color: $tcolor2;
          color:#fff;
          .navIcon{
            color:#fff;
          }
          a{
            color:#fff;
          }
        }
      }
    }
  }
}
// xs:480px;sm:768px;md:992px;lg:1200px
//Responsive
@include respond-to(sm) {
  .nav2Bg{
    margin-top: 20px;
    .boxleft{
      width: 100%;
      margin-bottom: 15px;
      background-color: #fff;
      box-shadow: 0px 0px 2px #ccc;
      ul{
        background-color: #fff;
        li{
          float: left;
          min-width: 53.33333px;
          width: 20%;
          line-height: normal;
          padding:10px 0;
          text-align: center;
          background-color: #fff;
          transition:all .3s;
          color:#555;
          cursor: pointer;
          a{
          text-align: center;

            .navIcon{
              display: block;
              position: relative;
              font-size: 20px;
              color:$tcolor1;
              margin-bottom:10px;
              margin-left:0;
            }
            span:nth-child(2){
              display: block;
              position: relative;
              font-size: 8px;
            }
          }
        }
        li:hover{
          background-color: $tcolor2;
          color:#fff;
          .navIcon{
            color:#fff;
          }
        }
      }
    }
  }
}
@include respond-to(xs) {
  .nav2Bg{
    margin-top: 20px;
    .boxleft{
    margin-bottom: 10px;
      ul{
        background-color: #fff;
        li{
          float: left;
          min-width: 53.33333px;
          width: 25%;
          line-height: normal;
          padding:10px 0;
          text-align: center;
          background-color: #fff;
          transition:all .3s;
          color:#555;
          cursor: pointer;
          a{
            .navIcon{
              display: block;
              position: relative;
              font-size: 20px;
              color:$tcolor1;
              margin-bottom:10px;
            }
            span:nth-child(2){
              display: block;
              position: relative;
              font-size: 8px;
            }
          }
        }
        li:hover{
          background-color: $tcolor2;
          color:#fff;
          .navIcon{
            color:#fff;
          }
        }
      }
    }
  }
}
#close{
  display:none;
  position: absolute;
  // margin: 0 auto;
  width: 30px;
  height: 30px;
  left:50%;
  margin-left:-15px;
  border-radius: 15px;
  background-color: $tcolor1;
  color:#fff;
  text-align: center;
  line-height: 30px;
  cursor: pointer;
  top:-15px;
  transition:all .3s;
}

#close:hover{
  background-color: $tcolor2;
}
// xs:480px;sm:768px;md:992px;lg:1200px
//Responsive
@include respond-to(md) {
  #close{
  display:block;}
}